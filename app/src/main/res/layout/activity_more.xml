<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Transparent upper view -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/cardview_pop"
    android:padding="48dp"
    android:gravity="center">

    <!-- First Row of Items -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <!-- Group Item -->
        <androidx.cardview.widget.CardView
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="24dp">

            <LinearLayout
                android:id="@+id/group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ic_group"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_group" />

                <TextView
                    android:id="@+id/tv_groups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Groups"
                    android:textColor="@color/material_500"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Help Item -->
        <androidx.cardview.widget.CardView
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="24dp">

            <LinearLayout
                android:id="@+id/help"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ic_help"
                    android:layout_width="130dp"
                    android:layout_height="70dp"
                    android:src="@drawable/help_icon" />

                <TextView
                    android:id="@+id/tv_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Help"
                    android:textColor="@color/material_500"
                    android:textSize="19sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Second Row of Items -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <!-- Borrow/Lend Item -->
        <androidx.cardview.widget.CardView
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="24dp">

            <LinearLayout
                android:id="@+id/borrow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="1dp">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:src="@drawable/borrow" />

                <TextView
                    android:id="@+id/tv_borrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="19dp"
                    android:text="Borrow\nLend"
                    android:textColor="@color/material_500"
                    android:textSize="14sp"
                    android:maxLines="2" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- My Profile Item -->
        <androidx.cardview.widget.CardView
            android:layout_width="125dp"
            android:layout_height="150dp"
            app:cardCornerRadius="24dp">

            <LinearLayout
                android:id="@+id/ic_MyProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="1dp">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="70dp"
                    android:src="@drawable/account_icon" />

                <TextView
                    android:id="@+id/tv_MyProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="19dp"
                    android:text="My\nProfile"
                    android:textColor="@color/material_500"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>
</FrameLayout>
