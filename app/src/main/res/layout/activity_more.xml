<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="24dp"
    android:background="@drawable/cardview_background"
    app:cardCornerRadius="24dp"
    app:cardElevation="10dp">

    <!-- Content inside the CardView -->
    <LinearLayout
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="46dp"
        android:gravity="center">

        <!-- First Row of Items -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- Group Item -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/cardview_pop"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ic_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_group" />

                <TextView
                    android:id="@+id/tv_groups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Groups"
                    android:textColor="@color/material_500"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Help Item -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/cardview_pop"
                android:padding="16dp"
                android:layout_marginStart="32dp">

                <ImageView
                    android:id="@+id/ic_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_group" />

                <TextView
                    android:id="@+id/tv_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Help"
                    android:textColor="@color/material_500"
                    android:textSize="19sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Second Row of Items -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- Borrow/Lend Item -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/cardview_pop"
                android:padding="16dp"
                android:layout_marginStart="6dp">

                <ImageView
                    android:id="@+id/ic_borrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_group" />

                <TextView
                    android:id="@+id/tv_borrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Borrow\nLend"
                    android:textColor="@color/material_500"
                    android:textSize="14sp"
                    android:maxLines="2" />
            </LinearLayout>

            <!-- My Profile Item -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/cardview_pop"
                android:padding="16dp"
                android:layout_marginStart="32dp">

                <ImageView
                    android:id="@+id/ic_MyProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_group" />

                <TextView
                    android:id="@+id/tv_MyProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="My\nProfile"
                    android:textColor="@color/material_500"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
