<!-- res/drawable/cardview_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/light_purple" /> <!-- Adjust the shadow color and opacity as needed -->
            <corners android:radius="10dp" /> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>
    <!-- Transparent Background -->
    <item android:bottom="5dp">
        <shape>
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>
